  "dependencies": {
    "@vroskus/library-cookies": "1.0.10",
    "bcrypt-nodejs": "0.0.3",
    "express-jwt": "8.4.1",
    "express-useragent": "1.0.15",
    "geoip-lite": "1.4.7",
    "jsonwebtoken": "9.0.2",
    "lodash": "4.17.21"
  },
  "devDependencies": {
    "@types/express-jwt": "7.4.2",
    "@types/jest": "29.5.7",
    "@types/jsonwebtoken": "9.0.4",
    "@types/lodash": "4.14.200",
    "@types/node": "20.8.10",
    "@typescript-eslint/eslint-plugin": "6.9.1",
    "@typescript-eslint/parser": "6.9.1",
    "body-parser": "1.20.2",
    "eslint": "8.53.0",
    "eslint-config-airbnb-base": "15.0.0",
