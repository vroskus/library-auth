  "devDependencies": {
    "@types/express-jwt": "^7.4.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/lodash": "^4.17.13",
    "@types/node": "^22.10.2",
