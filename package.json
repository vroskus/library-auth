    "express": "4.18.2",
    "jest": "29.7.0",
    "jest-coverage-thresholds-bumper": "1.1.0",
    "npm-check": "6.0.1",
    "supertest": "6.3.3",
    "ts-jest": "29.1.1",
    "typescript": "5.2.2"
  },
  "jest": {
    "preset": "ts-jest",
    "testEnvironment": "node",
    "coverageReporters": [
      "json-summary",
      "text"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 11.11,
        "functions": 76.92,
        "lines": 65.3,
        "statements": 68.33
