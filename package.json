    "lodash": "^4.17.21"
  },
  "devDependencies": {
    "@types/express-jwt": "^7.4.4",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "^9.0.9",
    "@types/lodash": "^4.17.16",
    "@types/node": "^22.14.0",
    "@vroskus/eslint-config": "^1.0.25",
    "body-parser": "^2.2.0",
    "express": "^5.1.0",
    "jest": "^29.7.0",
    "jest-coverage-thresholds-bumper": "^1.1.0",
